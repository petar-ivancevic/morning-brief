{
  "functions": {
    "api/**/*.js": {
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/cron/send-daily-briefs",
      "schedule": "0 13 * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
