{
  "functions": {
    "api/**/*.js": {
      "maxDuration": 60
    },
    "api/cron/send-daily-briefs.js": {
      "maxDuration": 300
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
